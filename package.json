{
  "name": "ldapclientwrapper",
  "version": "0.0.1",
  "description": "A ldap client nodejs",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/hufsm/openldapjs.git"
  },
  "dependencies": {
    "ajv": "5.3.0",
    "bluebird": "3.4.3",
    "ldif": "0.5.1",
    "nan": "2.6.0",
    "should": "11.2.0",
    "underscore": "1.8.3"
  },
  "config": {
    "domain": "ldap://localhost:389",
    "userDn": "cn=admin,dc=demoApp,dc=com",
    "userPassword": "secret",
    "entryDn": "cn=newPoint,ou=users,o=myhost,dc=demoApp,dc=com"
  },
  "scripts": {
    "coverage": "istanbul cover \"./node_modules/mocha/bin/_mocha\" ./test/test_start_tls.js ./test/*.js",
    "test": "istanbul test \"./node_modules/mocha/bin/_mocha\" ./test/test_start_tls.js ./test/*.js",
    "start": "nodemon ldapwrapper.js",
    "lint": "eslint ./libs/ldap_async_wrap.js",
    "addData": "node populate.js",
    "deleteTestData": "ldapdelete -H $npm_package_config_domain -D $npm_package_config_userDn -w $npm_package_config_userPassword  $npm_package_config_entryDn -r -c -Z",
    "workingAddData": "node ldifBuilder.js && ldapadd -H $npm_package_config_domain -D $npm_package_config_userDn -w $npm_package_config_userPassword -f ./bigDb.ldif -c && rm ./bigDb.ldif"
  },
  "author": {
    "name": "Huf Secure Mobile GmbH",
    "email": "info@hufsm.com",
    "url": "https://hufsm.com"
  },
  "maintainers": [
    "Radu Aribasoiu",
    "Cosmin Ghitea"
  ],
  "license": "ISC",
  "gypfile": true,
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "istanbul": "0.4.5",
    "mocha": "4.0.1",
    "eslint": "4.7.1",
    "eslint-config-airbnb": "15.1.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.3.0",
    "node-gyp": "3.6.2"
  }
}
